<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<GridPane fx:controller="strange.notepad.Controller"
          xmlns:fx="http://javafx.com/fxml" vgap="10" hgap="10" alignment="CENTER">
    <stylesheets>
        <URL value="@/strange/notepad/css/style.css"/>
    </stylesheets>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextArea fx:id="textArea" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" editable="false"/>


    <TextField fx:id="textField" GridPane.rowIndex="1" onAction="#inputText" GridPane.hgrow="ALWAYS"/>

    <Button text="Отправить" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#inputText"/>

</GridPane>